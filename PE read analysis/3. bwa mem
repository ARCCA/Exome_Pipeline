## Job script BWA mem with paired end reads 

#!/bin/bash --login
#SBATCH -J AmyHouseman_fastp
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p c_compute_wgp
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail

wget https://wotan.cardiff.ac.uk/containers/bwa-0.7.17.sif
module load singularity

#bwa mem for the alignment of the forward read to the reference genome.
cat All_fastp_input/List_of_33_exome_IDs | parallel -j 1 "singularity run bwa-0.7.17.sif mem HumanRefSeq/GRCh38_latest_genomic.fna /All_fastp_output/TrimmedPEreads/{}1.trimmed.fq.gz All_fastp_output/TrimmedPEreads/{}2.trimmed.fq.gz >> /bwa/mem/{}PE_bwamem.sam
