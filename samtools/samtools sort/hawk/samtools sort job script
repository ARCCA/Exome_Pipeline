
#Samtools sort on hawk.

#!/bin/bash --login
#SBATCH -J AmyHouseman_fastp
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p c_compute_wgp
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail

wget https://wotan.cardiff.ac.uk/containers/samtools-1.9.sif 
module load singularity

#BAM to sorted BAM for forward reads 
cat All_fastp_input/List_of_33_exome_IDs | parallel -j 1 "singularity run samtools-1.9.sif sort Polyposis_Exome_Analysis/samtools/samtoolsview/{}1_samtoolsview.bam Polyposis_Exome_Analysis/samtools/sortedbam/{}1_samtoolssorted.bam"

#BAM to sorted BAM for reverse reads
cat All_fastp_input/List_of_33_exome_IDs | parallel -j 1 "singularity run samtools-1.9.sif sort Polyposis_Exome_Analysis/samtools/samtoolsview/{}2_samtoolsview.bam Polyposis_Exome_Analysis/samtools/samtoolssort/{}2_samtoolssorted.bam"

#BAM to sorted BAM for PE reads
cat All_fastp_input/List_of_33_exome_IDs | parallel -j 1 "singularity run samtools-1.9.sif sort Polyposis_Exome_Analysis/samtools/samtoolsview/{}PE_samtoolsview.bam Polyposis_Exome_Analysis/samtools/samtoolssort/{}PE_samtoolssorted.bam"
